<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/card"
    android:layout_marginTop="@dimen/list_elements_margin"
    android:layout_marginLeft="@dimen/list_elements_margin"
    android:layout_marginRight="@dimen/list_elements_margin"
    card_view:cardCornerRadius="@dimen/list_elements_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_elements_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/app_photo"
                android:layout_toEndOf="@+id/app_photo">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/list_elements_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/app_name"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size"
                        android:layout_marginBottom="@dimen/title_space"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/app_summary"
                        android:layout_below="@+id/app_name" />

                </RelativeLayout>

            </ScrollView>

    </RelativeLayout>

</android.support.v7.widget.CardView>